@model IEnumerable<TaskItem>

<table class="table">
    <tr>
        <th>Tytuł</th>
        <th>Status</th>
        <th>Akcje</th>
    </tr>
    @foreach (var task in Model)
    {
        <tr>
            <td>@task.Title</td>
            <td>@(task.IsCompleted ? "✔️ Zakończone" : "❌ Otwarte")</td>
            <td>
                <a asp-action="Edit" asp-route-id="@task.Id" class="btn btn-warning">Edytuj</a>
                <a asp-action="Delete" asp-route-id="@task.Id" class="btn btn-danger">Usuń</a>
            </td>
        </tr>
    }
</table>
