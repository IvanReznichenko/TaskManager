@model TaskManager.Models.RegisterViewModel

<h2>Rejestracja</h2>

<form asp-action="Register" method="post">
    <div class="mb-3">
        <label class="form-label">Email:</label>
        <input asp-for="Email" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Hasło:</label>
        <input asp-for="Password" type="password" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Potwierdź hasło:</label>
        <input asp-for="ConfirmPassword" type="password" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-success">Rejestracja</button>
</form>
